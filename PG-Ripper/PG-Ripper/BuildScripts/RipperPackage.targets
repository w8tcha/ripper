<?xml version="1.0" encoding="windows-1252"?>
<Project ToolsVersion="3.5" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="MSBuild.Community.Tasks.Targets" />
  <Target Name="PackageModule" Condition=" '$(Configuration)|$(Platform)' == 'PG-Ripper|AnyCPU' ">
    <PropertyGroup>
      <Major>1</Major>
      <Minor>4</Minor>
      <Build>0</Build>
      <Revision>0</Revision>
    </PropertyGroup>

    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\PG-Ripper\$(AssemblyName).exe" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\PG-Ripper\ICSharpCode.SharpZipLib.dll" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\PG-Ripper\Microsoft.WindowsAPICodePack.dll" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\PG-Ripper\Microsoft.WindowsAPICodePack.Shell.dll" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>
    
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\x64\PG-Ripper64\$(AssemblyName).exe" DestinationFolder="$(MSBuildProjectDirectory)\Package\64 Bit\"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\x64\PG-Ripper64\ICSharpCode.SharpZipLib.dll" DestinationFolder="$(MSBuildProjectDirectory)\Package\64 Bit\"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\x64\PG-Ripper64\Microsoft.WindowsAPICodePack.dll" DestinationFolder="$(MSBuildProjectDirectory)\Package\64 Bit\"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\x64\PG-Ripper64\Microsoft.WindowsAPICodePack.Shell.dll" DestinationFolder="$(MSBuildProjectDirectory)\Package\64 Bit\"/>
    
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\license.txt" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\readme.txt" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>
   
    <CreateItem Include="$(MSBuildProjectDirectory)\Package\**\*.*">
      <Output TaskParameter="Include" ItemName="OutputContent" />
    </CreateItem>
    
    <!-- Create the Windows Package package -->    
    <Zip Files="@(OutputContent)" WorkingDirectory="$(MSBuildProjectDirectory)\Package" ZipFileName="$(PackageName)$(Major)$(Minor)$(Build)$(Revision).$(Extension)" />
    <!-- Copy the Install package to the Packages folder -->
    <Copy SourceFiles="$(MSBuildProjectDirectory)\$(PackageName)$(Major)$(Minor)$(Build)$(Revision).$(Extension)" DestinationFolder="$(MSBuildProjectDirectory)/../packages" />
    
    <RemoveDir Directories ="$(MSBuildProjectDirectory)\Package" />
    
    <!-- Copy the Mono Version-->

    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\PG-RipperX\$(AssemblyName).exe" DestinationFiles="$(MSBuildProjectDirectory)\Package\$(AssemblyName)X.exe"/>

    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\license.txt" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\readme.txt" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>

    <CreateItem Include="$(MSBuildProjectDirectory)\Package\**\*.*">
      <Output TaskParameter="Include" ItemName="OutputContentMono" />
    </CreateItem>

    <!-- Create the Linux (MONO) Package package -->
    <Zip Files="@(OutputContentMono)" WorkingDirectory="$(MSBuildProjectDirectory)\Package" ZipFileName="$(PackageName)X$(Major)$(Minor)$(Build)$(Revision).$(Extension)" />
    <!-- Copy the Install package to the Packages folder -->
    <Copy SourceFiles="$(MSBuildProjectDirectory)\$(PackageName)X$(Major)$(Minor)$(Build)$(Revision).$(Extension)" DestinationFolder="$(MSBuildProjectDirectory)/../packages" />

    <RemoveDir Directories ="$(MSBuildProjectDirectory)\Package" />

    <!-- Copy the Mac Version-->
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\PGRipperX.app\Contents\Info.plist" DestinationFolder="$(MSBuildProjectDirectory)\Package\PGRipperX.app\Contents"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\PGRipperX.app\Contents\MacOS\PGRipperX" DestinationFolder="$(MSBuildProjectDirectory)\Package\PGRipperX.app\Contents\MacOS\"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\PGRipperX.app\Contents\Resources\App.icns" DestinationFolder="$(MSBuildProjectDirectory)\Package\PGRipperX.app\Contents\Resources"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\PGRipperX.app\Contents\Resources\bin\PGRipperX" DestinationFolder="$(MSBuildProjectDirectory)\Package\PGRipperX.app\Contents\Resources\bin"/>

    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\PG-RipperX\$(AssemblyName).exe" DestinationFiles="$(MSBuildProjectDirectory)\Package\PGRipperX.app\Contents\Resources\$(AssemblyName)X.exe"/>

    <CreateItem Include="$(MSBuildProjectDirectory)\Package\PGRipperX.app\**\*.*">
      <Output TaskParameter="Include" ItemName="OutputContentMac" />
    </CreateItem>

    <!-- Create the Mac Package -->
    <Zip Files="@(OutputContentMac)" WorkingDirectory="$(MSBuildProjectDirectory)\Package" ZipFileName="$(PackageName)X.$(Extension)" />
    
    <Move SourceFiles="$(MSBuildProjectDirectory)\$(PackageName)X.$(Extension)" DestinationFolder="$(MSBuildProjectDirectory)\Package\" />
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\license.txt" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\readme.txt" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>

    <CreateItem Include="$(MSBuildProjectDirectory)\Package\*.*">
      <Output TaskParameter="Include" ItemName="OutputContentMacFinal" />
    </CreateItem>

    <!-- Create the Mac Package package -->
    <Zip Files="@(OutputContentMacFinal)" WorkingDirectory="$(MSBuildProjectDirectory)\Package" ZipFileName="$(PackageName)X$(Major)$(Minor)$(Build)$(Revision)_mac.$(Extension)" />
    <!-- Copy the Install package to the Packages folder -->
    <Copy SourceFiles="$(MSBuildProjectDirectory)\$(PackageName)X$(Major)$(Minor)$(Build)$(Revision)_mac.$(Extension)" DestinationFolder="$(MSBuildProjectDirectory)/../packages" />

    <RemoveDir Directories ="$(MSBuildProjectDirectory)\Package" />

    <!-- Copy the x86 Install Version-->

    <Copy SourceFiles="$(MSBuildProjectDirectory)\..\PG-Ripper-Setup\PG-Ripper-Install.msi" DestinationFolder="$(MSBuildProjectDirectory)\Package"/>

    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\license.txt" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\readme.txt" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>

    <CreateItem Include="$(MSBuildProjectDirectory)\Package\**\*.*">
      <Output TaskParameter="Include" ItemName="OutputContentInstallX86" />
    </CreateItem>

    <!-- Create the x86 Install Version package -->
    <Zip Files="@(OutputContentInstallX86)" WorkingDirectory="$(MSBuildProjectDirectory)\Package" ZipFileName="$(PackageName)$(Major)$(Minor)$(Build)$(Revision)-Install.$(Extension)" />
    <!-- Copy the Install package to the Packages folder -->
    <Copy SourceFiles="$(MSBuildProjectDirectory)\$(PackageName)$(Major)$(Minor)$(Build)$(Revision)-Install.$(Extension)" DestinationFolder="$(MSBuildProjectDirectory)/../packages" />

    <RemoveDir Directories ="$(MSBuildProjectDirectory)\Package" />

    <!-- Copy the x64 Install Version-->

    <Copy SourceFiles="$(MSBuildProjectDirectory)\..\PG-Ripper-Setup-x64\PG-Ripper-Install_x64.msi" DestinationFolder="$(MSBuildProjectDirectory)\Package"/>

    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\license.txt" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>
    <Copy SourceFiles="$(MSBuildProjectDirectory)\bin\readme.txt" DestinationFolder="$(MSBuildProjectDirectory)\Package\"/>

    <CreateItem Include="$(MSBuildProjectDirectory)\Package\**\*.*">
      <Output TaskParameter="Include" ItemName="OutputContentInstallX64" />
    </CreateItem>

    <!-- Create the x86 Install Version package -->
    <Zip Files="@(OutputContentInstallX64)" WorkingDirectory="$(MSBuildProjectDirectory)\Package" ZipFileName="$(PackageName)$(Major)$(Minor)$(Build)$(Revision)-Install-x64.$(Extension)" />
    <!-- Copy the Install package to the Packages folder -->
    <Copy SourceFiles="$(MSBuildProjectDirectory)\$(PackageName)$(Major)$(Minor)$(Build)$(Revision)-Install-x64.$(Extension)" DestinationFolder="$(MSBuildProjectDirectory)/../packages" />

    <RemoveDir Directories ="$(MSBuildProjectDirectory)\Package" />


    <Delete Files="$(MSBuildProjectDirectory)\$(PackageName)$(Major)$(Minor)$(Build)$(Revision).$(Extension)" />
    <Delete Files="$(MSBuildProjectDirectory)\$(PackageName)X$(Major)$(Minor)$(Build)$(Revision).$(Extension)" />
    <Delete Files="$(MSBuildProjectDirectory)\$(PackageName)X$(Major)$(Minor)$(Build)$(Revision)_mac.$(Extension)" />
    <Delete Files="$(MSBuildProjectDirectory)\$(PackageName)$(Major)$(Minor)$(Build)$(Revision)-Install.$(Extension)" />
    <Delete Files="$(MSBuildProjectDirectory)\$(PackageName)$(Major)$(Minor)$(Build)$(Revision)-Install-x64.$(Extension)" />

  </Target>
</Project>